@model Inspinia_MVC5.Usuario

@{
    ViewBag.Title = "Create";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Create</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Create Usuario</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre)
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Apellido, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Apellido)
                @Html.ValidationMessageFor(model => model.Apellido)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Flota, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Flota)
                @Html.ValidationMessageFor(model => model.Flota)
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Comandancia</label>
            <div class="col-md-10">
                @Html.DropDownList("ComandanciaId", String.Empty)
                @Html.ValidationMessageFor(model => model.ComandanciaId)
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Usuario</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Usuario1)
                @Html.ValidationMessageFor(model => model.Usuario1)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Contraseña, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Contraseña)
                @Html.ValidationMessageFor(model => model.Contraseña)
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Rol</label>
            <div class="col-md-10">
                @Html.DropDownList("idRol", String.Empty)
                @Html.ValidationMessageFor(model => model.idRol)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
				@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}

                </div>
            </div>
        </div>
    </div>
 </div>

 
